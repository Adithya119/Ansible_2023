# You can also directly give command:-
"command" is a module
    command: sudo sh -c 'chmod +x /opt/tomcat/latest/bin/*.sh'


# you should notify systemd whenever you add a new unit file --> # sudo systemctl daemon-reload
    ex: /etc/systemd/system/tomcat.service


